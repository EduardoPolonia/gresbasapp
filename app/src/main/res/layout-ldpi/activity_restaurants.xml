<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Restaurants">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#33a5ff">

        <android.support.v7.widget.Toolbar
            android:id="@+id/bar_user_toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="#33a5ff"
            android:textAlignment="center"
            app:popupTheme="@style/AppTheme.PopupOverlay">


            <ImageButton
                android:id="@+id/logotitleimpact"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="7dp"
                android:background="@android:color/transparent"
                android:cropToPadding="true"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/icgresbasnav" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Restaurants"
                android:textAllCaps="false"
                android:textColor="@color/branco"
                android:textSize="22sp"
                android:textStyle="bold" />
        </android.support.v7.widget.Toolbar>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/list_location"
            style="@style/mySpinnerItemStyle"
            android:layout_width="357dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:hint="select restaurant"
            android:popupBackground="#67656c"
            android:spinnerMode="dialog"
            android:textColor="@color/azul"
            android:textAlignment="center" />

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="303dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"
            android:background="#cccccc"
            android:dateTextAppearance="@style/CalenderViewDateCustomText"
            android:theme="@style/CalenderViewCustom"
            android:weekDayTextAppearance="@style/CalenderViewWeekCustomText" />

        <TextView
            android:id="@+id/titlemenusday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="375dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#1981d4"
            android:textSize="15sp"
            android:text="Menus for this day"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleViewContainer"
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="400dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="400dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:padding="8dp">

            <ImageView
                android:id="@+id/nothingtoshowicon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp" />

            <TextView
                android:id="@+id/textmenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@+id/nothingtoshowicon"
                android:maxLines="1"
                android:text=""
                android:textAlignment="textEnd"
                android:textSize="15sp" />

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>