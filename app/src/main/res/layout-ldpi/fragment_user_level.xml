<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#6F000000"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageButton
            android:id="@+id/medalhalevel"
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@android:color/transparent"
            android:padding="15dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/titlescore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_gravity="center"
            android:text="Score Board"
            android:textAllCaps="false"
            android:textColor="#00cf81"
            android:textSize="25sp"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleViewContainerscore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="25dp" />
    </LinearLayout>

    <!--    <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_navigationlev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#00cf81"
            app:itemIconTint="@color/branco"
            app:itemTextColor="@color/branco"
            app:menu="@menu/bottom_navigation_main" />-->
</ScrollView>